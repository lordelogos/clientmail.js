{
  "name": "client-mail",
  "version": "0.1.0",
  "description": "Clientmail is a package that allows you send emails directly from your client-side code in your javascript or typescript project",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:browser": "tsup --format iife",
    "lint": "tsc",
    "release": "pnpm run build && changeset publish"
  },
